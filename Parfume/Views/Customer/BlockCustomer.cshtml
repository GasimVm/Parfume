@model IEnumerable<Parfume.Models.Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/CustomScript/Scripts/BlockCustomer.js"></script>
<div class="card" style="overflow:auto">
    <div class="card-body pb-4">
        <table id="table" class="table table-hover table-bordered ">
            <thead>
                <tr>
                    <th style="width:70.781px;">№<br /><input type="text" placeholder="Axtar" class="form-control" /></th>

                    <th>Adı, soyadı, ata adı <br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th>Fin<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th>Nömrəsi<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:100.781px;">Sifariş sayı<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th>Qeyd<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:200px; ">Əməliyyat<br /> </th>

                </tr>
            </thead>
            <tbody class="TableBodyDetails">
                @{ var index = 1;}
                @foreach (var item in Model)
                {

                    <tr data-href="@Url.Action("CustomerDetails","Customer",new {customerId=item.Id })">
                        <td>@index</td>
                        <td>@item.Name @item.Surname @item.FatherName  </td>
                        <td>@item.Fincode</td>
                        <td>@item.BaseNumber</td>
                        <td>@item.Orders.Count</td>
                        <td>@item.BlockNote</td>
                        @if (User.IsInRole("Admin"))
                        {
                    <td>
                        <button type="button" class="btn btn-info removeInBlock" data-custId="@item.Id" style="  width:180px; ">
                            Blokdan cixartmaq
                        </button>
                    </td>
                        }
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>

