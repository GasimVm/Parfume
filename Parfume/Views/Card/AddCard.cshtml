@model Parfume.Models.Customer
@{
    ViewData["Title"] = "CustomerEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/CustomScript/Scripts/AddCard.js"></script>
<div class=" contairner">
    <h3 class="mb-3   text-center">Qeyd əlavə olunması</h3>
    <div class="row text-center">
        <input hidden class="customerId" value="@Model.Id" />
        <div class="col-4">
            <select class="form-control cardInfo">
                @foreach (var item in ViewBag.Cards)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div class="col-3 mt-3">
            <button style="height: 50%; margin-top: 13%;" class="btn btn-success addCardCustomer">Yadda saxla</button>
        </div>

    </div>
</div>



