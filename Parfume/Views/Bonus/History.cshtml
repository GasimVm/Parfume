@model IEnumerable<Parfume.Models.BonusHistory>
@{
    var IsAdmin = User.IsInRole("Admin");
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    
</div>
<div class="card" style="overflow:auto">
    <div class="card-body pb-4">
        <table id="table" class="table table-hover table-bordered ">
            <thead>
                <tr>
                    <th style="width:80px; ">№<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:180px; ">Bonus alanin Adı, soyadı, ata adı <br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:180px; ">Bonus alanin nömrəsi <br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:180px; ">Bonus alanin fini <br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:80px; ">Bonusun miqdarı<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:80px; ">Sifarişin nömrəsi<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:80px; ">Məhsulun adı<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:90px; ">Total qiyməti yeri<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                    <th style="width:180px; ">Satiş tarixi<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                </tr>
            </thead>
            <tbody class="TableBodyDetails">
                @{ var index = 1;}
                @foreach (var item in Model)
                {

                    <tr data-href="@Url.Action("CustomerDetails", "Customer", new { customerId = item.CustomerId })">
                        <td>@index</td>
                        <td>@item.Customer.Name @item.Customer.Surname @item.Customer.FatherName  </td>
                         <td>@item.Customer.BaseNumber </td>
                         <td>@item.Customer.Fincode </td>
                         <td>@item.Amount </td>
                         <td>@item.Order.Id </td>
                         <td>@item.Order.Name </td>
                        <td>@item.Order.TotalPrice</td>
                        <td>@item.Order.CreateDate</td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Qeyd</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea class="form-control noteBlock"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                <button type="button" class="btn btn-primary blockUser" data-CustomerIdBlock="">Təsdiqlə</button>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).on("dblclick", ".TableBodyDetails tr", function () {
        window.location.href = $(this).attr('data-href');
    })
    $(document).on("click", ".addVip", function () {
        window.location.href = $(this).attr('data-href');
    })

</script>
<script src="~/CustomScript/Scripts/VIpIndex.js"></script>
