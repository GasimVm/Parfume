@model IEnumerable<Parfume.Models.Expense>
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/CustomScript/Scripts/Expense.js"></script>
<h1 class="text-center">Rasxodun tarixçəsı</h1>
<div class="row">
    <div class="col-12">

        <div class="card" style="overflow:auto">
            <div class="card-body pb-4">
                <table id="table" class="table table-hover table-bordered ">
                    <thead>
                        <tr>
                            <th style="width:70.781px;">№<br /><input type="text" placeholder="Axtar" class="form-control" /></th>

                            <th> adı  <br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                            <th>Miqdarı<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                            <th>Tarix<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                            <th>Əməliyyat<br /><input type="text" placeholder="Axtar" class="form-control" /></th>
                        </tr>
                    </thead>
                    <tbody class="TableBodyDetails">
                      @{  var index = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.Name</td>
                                <td>@item.Money</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button type="button" class="btn  expenseDelete " data-expenseId="@item.Id" style="background: #c79957; width:80px; ">
                                        Silmək
                                    </button>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

