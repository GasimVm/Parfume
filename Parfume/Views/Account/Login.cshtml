@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/CustomStyle/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        #formDiv {
            width: 300px;
            height: 350px;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body>
    <div class="container">
        <div id="formDiv">

            <img src="~/images/logo2.png" style="width:300px; height:140px;"/>
            <br />
            <br />
            <form action="@Url.Action("Login", "Account")" method="post" class="form-group">
                <input type="text" name="Fincode" placeholder="İstifadəçi adı" class="form-control" autocomplete="off" />
                <br />
                <input type="password" name="Password" placeholder="Şifrə" class="form-control" autocomplete="off" />
                <br />
                <div style="color:red; font-size:22px;"> @Html.ValidationSummary()</div>

                <input type="submit" value="Daxil ol" class="btn " style="width: 100% ;background-color: #c79957;" />

            </form>
            <div style="font-family:sans-serif">
                 
            </div>

        </div>
    </div>

</body>
</html>